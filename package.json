{
  "name": "family-tree-app",
  "version": "1.0.0",
  "description": "NodeJS application that provides a way to create a simple HTML page that interactively shows a family tree",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "check-format": "prettier --check",
    "ci": "npm run build && npm run check-format && npm run test",
    "format": "prettier --write .",
    "start": "node ./src/index.js",
    "test": "vitest run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arnavmaiti/node-family-tree-app.git"
  },
  "author": "Arnav Maiti <arnavmaiti@gmail.com> (https://www.arnavmaiti.com)",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/arnavmaiti/node-family-tree-app/issues"
  },
  "homepage": "https://github.com/arnavmaiti/node-family-tree-app#readme",
  "devDependencies": {
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
